.section {
  &__title {
    font-size: 36px;
    font-weight: bold;
    text-transform: uppercase;
    margin-bottom: 48px;
  }
  &__title2 {
    margin-bottom: 80px;
    color: #000;
    font-size: 48px;
    font-weight: bold;
    text-transform: uppercase;
  }
  &--main {
    background: url('../images/content/hero.jpg') 0 0/contain no-repeat;
  }
  &--news {
    padding-top: 138px;
    background: url('../images/content/bottom-pic.jpg') 0 395px/contain no-repeat;
    @include tablets {
      padding-top: 60px;
    }
  }
  &--header {
    background: url('../images/content/service-head.png') 0 0/cover no-repeat;
    padding-bottom: 25px;
    & .container--header {
      margin-bottom: 130px;
      @include phones {
        margin-bottom: 40px;
      }
    }
    @include medium {
      background-position: -600px 0;
    }
  }
  &--other {
    background: #fff;
    padding-top: 100px;
    padding-bottom: 90px;
    @include tablets {
      padding-top: 40px;
      padding-bottom: 40px;
    }
  }
  &--partners {
    background: #f4f5f5;
    padding: 100px 0;
    @include tablets {
      padding-top: 40px;
      padding-bottom: 40px;
    }
  }
  &__other-title {
    font-size: 72px;
    text-transform: uppercase;
    font-weight: bold;
    margin-bottom: 76px;
    color: #fff;
    @include phones {
      margin-bottom: 0;
    }
  }
  &--banner {
    padding: 130px 0;
    background: url('../images/content/banner.png') 0 0/cover no-repeat;
  }
  &--feedback {
    background: #f4f5f5;
    padding: 90px 0 95px;
  }
}