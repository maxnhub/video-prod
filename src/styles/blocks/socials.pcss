.socials {
  display: flex;
  padding-left: 32px;
  &__item {
    width: 36px;
    height: 36px;
    margin-right: 10px;
    display: flex;
    cursor: pointer;
    &:last-child {
      margin-right: 0;
    }
    &:hover .socials__icon {
      opacity: 1;
    }
  }
  &__icon {
    width: 36px;
    height: 36px;
    opacity: 0.4;
  }
}