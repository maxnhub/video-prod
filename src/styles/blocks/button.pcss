.info-button {
  font-size: 16px;
  font-family: 'OpenSans', 'Trebuchet MS', sans-serif;
  letter-spacing: 1.2px;
  color: $links-color;
  background: #fff;
  border-radius: 30px;
  text-transform: uppercase;
  padding: 18px 42px;
  transition: 0.3s;
  border: 3px solid $links-color;
  font-weight: bold;
  &:hover {
    color: #fff;
    background: $links-color;
  }
  &--main {
    color: #fff;
    background: $links-color;
    border: none;
    &:hover {
      background: $second-color;
    }
  }
  &--about {
    color: #fff;
    background: $links-color;
    border: none;
    padding: 18px 32px;
    &:hover {
      background: $second-color;
    }
  }
  &--clear {
    margin-right: 10px;
    background: #424242;
    color: #fff;
    border: 3px solid transparent;
    &:hover {
      background: $second-color;
    }
    @include tablets {
      margin-right: 0;
      margin-bottom: 10px;
    }
  }
  
}